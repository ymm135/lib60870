    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/cs104_server/cs104_server",
            "args": [
                "--ip=127.0.0.1",
                "--port=502",
                "--ioa_merge",
                "--update_second=2",
                "--yx_num=10000",
                "--yc_num=10000"
            ],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "Launch client",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/examples/cs104_client/simple_client",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}